<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <object class="AdwApplicationWindow" id="window">
    <property name="default-width">1100</property>
    <property name="default-height">650</property>
    <property name="title">Air Quality Dashboard</property>
    <property name="content">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="GtkLabel">
                <property name="label">Company Name</property>
                <style><class name="title"/></style>
              </object>
            </property>
            <child type="end">
               <object class="GtkButton">
                 <property name="label">Sign out</property>
                 <style><class name="flat"/></style>
               </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            
            <!-- Sidebar -->
            <child>
              <object class="GtkStackSidebar">
                <property name="stack">main_stack</property>
                <property name="width-request">240</property>
                <style><class name="sidebar"/></style>
              </object>
            </child>
            
            <child>
              <object class="GtkSeparator"/>
            </child>

            <!-- Main Content -->
            <child>
              <object class="GtkStack" id="main_stack">
                
                <!-- Dashboard Page -->
                <child>
                  <object class="GtkStackPage">
                    <property name="name">dashboard</property>
                    <property name="title">Dashboard</property>
                    <property name="child">
                      <object class="GtkScrolledWindow">
                        <property name="child">
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="margin-top">20</property>
                            <property name="margin-bottom">40</property>
                            <property name="margin-start">40</property>
                            <property name="margin-end">40</property>
                            <property name="spacing">20</property>

                            <!-- Dashboard Header -->
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">15</property>
                                <property name="margin-bottom">10</property>
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Dashboard</property>
                                    <style><class name="dashboard-title"/></style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="hexpand">true</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <style>
                                      <class name="linked"/>
                                    </style>
                                    <child>
                                      <object class="GtkButton">
                                        <property name="label">Share</property>
                                        <style><class name="btn-outline"/></style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton">
                                        <property name="label">Export</property>
                                        <style><class name="btn-outline"/></style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkDropDown" id="city_dropdown">
                                    <property name="enable-search">true</property>
                                    <property name="model">
                                      <object class="GtkStringList">
                                        <items>
                                          <item>New Delhi</item>
                                          <item>Mumbai</item>
                                          <item>Bengaluru</item>
                                          <item>Chennai</item>
                                          <item>Kolkata</item>
                                          <item>Hyderabad</item>
                                          <item>Pune</item>
                                          <item>Ahmedabad</item>
                                        </items>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkButton" id="btn_fetch_aqi">
                                    <property name="label">Update</property>
                                    <style><class name="btn-primary"/></style>
                                  </object>
                                </child>
                              </object>
                            </child>

                            <!-- Chart -->
                            <child>
                               <object class="GtkDrawingArea" id="chart_area_current">
                                 <property name="height-request">350</property>
                                 <style><class name="card"/></style>
                               </object>
                            </child>

                            <!-- Section Title -->
                            <child>
                              <object class="GtkLabel">
                                <property name="label">Current Stats</property>
                                <property name="halign">start</property>
                                <style><class name="section-title"/></style>
                              </object>
                            </child>

                            <!-- Stats Grid -->
                            <child>
                               <object class="GtkBox" id="aqi_result_box">
                                  <property name="orientation">horizontal</property>
                                  <property name="spacing">20</property>
                                  <property name="homogeneous">true</property>
                                  
                                  <!-- AQI Card -->
                                  <child>
                                    <object class="GtkBox">
                                      <property name="orientation">vertical</property>
                                      <property name="spacing">5</property>
                                      <style><class name="card"/></style>
                                      <child>
                                        <object class="GtkLabel">
                                          <property name="label">AQI Index</property>
                                          <property name="halign">start</property>
                                          <style><class name="stat-label"/></style>
                                        </object>
                                      </child>
                                      <child>
                                        <object class="GtkLabel" id="lbl_aqi_value">
                                          <property name="label">--</property>
                                          <property name="halign">start</property>
                                          <style><class name="stat-value"/></style>
                                        </object>
                                      </child>
                                      <child>
                                        <object class="GtkLabel" id="lbl_aqi_status">
                                          <property name="label">Status</property>
                                          <property name="halign">start</property>
                                        </object>
                                      </child>
                                    </object>
                                  </child>

                                  <!-- PM2.5 Card -->
                                  <child>
                                    <object class="GtkBox">
                                      <property name="orientation">vertical</property>
                                      <property name="spacing">5</property>
                                      <style><class name="card"/></style>
                                      <child>
                                        <object class="GtkLabel">
                                          <property name="label">PM 2.5</property>
                                          <property name="halign">start</property>
                                          <style><class name="stat-label"/></style>
                                        </object>
                                      </child>
                                      <child>
                                        <object class="GtkLabel" id="lbl_pm25">
                                          <property name="label">--</property>
                                          <property name="halign">start</property>
                                          <style><class name="stat-value"/></style>
                                        </object>
                                      </child>
                                    </object>
                                  </child>

                                  <!-- PM10 Card -->
                                  <child>
                                    <object class="GtkBox">
                                      <property name="orientation">vertical</property>
                                      <property name="spacing">5</property>
                                      <style><class name="card"/></style>
                                      <child>
                                        <object class="GtkLabel">
                                          <property name="label">PM 10</property>
                                          <property name="halign">start</property>
                                          <style><class name="stat-label"/></style>
                                        </object>
                                      </child>
                                      <child>
                                        <object class="GtkLabel" id="lbl_pm10">
                                          <property name="label">--</property>
                                          <property name="halign">start</property>
                                          <style><class name="stat-value"/></style>
                                        </object>
                                      </child>
                                    </object>
                                  </child>

                               </object>
                            </child>

                            <!-- Section Title -->
                            <child>
                              <object class="GtkLabel">
                                <property name="label">Health Advice</property>
                                <property name="halign">start</property>
                                <style><class name="section-title"/></style>
                              </object>
                            </child>

                            <!-- Advice Table/Card -->
                            <child>
                              <object class="GtkBox">
                                <style><class name="card"/></style>
                                <child>
                                  <object class="GtkLabel" id="lbl_health_advice">
                                    <property name="label">Select a city to view health advice.</property>
                                    <property name="wrap">true</property>
                                    <property name="xalign">0</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                            
                            <!-- Hidden label for city name logic compatibility -->
                            <child>
                                <object class="GtkLabel" id="lbl_city_name">
                                    <property name="visible">false</property>
                                </object>
                            </child>

                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </child>

                <!-- Live Charts Page -->
                <child>
                  <object class="GtkStackPage">
                    <property name="name">live_charts</property>
                    <property name="title">Live Charts</property>
                    <property name="child">
                      <object class="GtkScrolledWindow">
                        <property name="child">
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="margin-top">20</property>
                            <property name="margin-bottom">40</property>
                            <property name="margin-start">40</property>
                            <property name="margin-end">40</property>
                            <property name="spacing">20</property>

                            <child>
                              <object class="GtkLabel">
                                <property name="label">Live Data Feeds</property>
                                <property name="halign">start</property>
                                <style><class name="dashboard-title"/></style>
                              </object>
                            </child>

                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">20</property>
                                <property name="homogeneous">true</property>
                                
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">10</property>
                                    <style><class name="card"/></style>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label">Server Load (CPU)</property>
                                        <property name="halign">start</property>
                                        <style><class name="section-title"/></style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkDrawingArea" id="chart_live_cpu">
                                        <property name="height-request">250</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">10</property>
                                    <style><class name="card"/></style>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label">Memory Usage</property>
                                        <property name="halign">start</property>
                                        <style><class name="section-title"/></style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkDrawingArea" id="chart_live_mem">
                                        <property name="height-request">250</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>

                            <child>
                                <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">10</property>
                                    <style><class name="card"/></style>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label">Network Traffic (Inbound/Outbound)</property>
                                        <property name="halign">start</property>
                                        <style><class name="section-title"/></style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkDrawingArea" id="chart_live_net">
                                        <property name="height-request">300</property>
                                      </object>
                                    </child>
                                </object>
                            </child>

                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </child>

                <!-- Video Page -->
                <child>
                  <object class="GtkStackPage">
                    <property name="name">video</property>
                    <property name="title">Media Player</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">20</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">horizontal</property>
                            <property name="spacing">10</property>
                            <child>
                              <object class="GtkEntry" id="url_entry">
                                <property name="placeholder-text">Enter Video URL...</property>
                                <property name="width-request">400</property>
                                <property name="text">https://download.blender.org/peach/bigbuckbunny_movies/BigBuckBunny_320x180.mp4</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton" id="play_button">
                                <property name="label">Play</property>
                                <property name="icon-name">media-playback-start-symbolic</property>
                                <style>
                                  <class name="suggested-action"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkFrame">
                            <property name="width-request">640</property>
                            <property name="height-request">360</property>
                            <child>
                              <object class="GtkVideo" id="video_player">
                                <property name="autoplay">false</property>
                                <property name="loop">true</property>
                              </object>
                            </child>
                          </object>
                        </child>

                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </object>
</interface>